<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ProductFragment">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/product_image"
        android:layout_width="@dimen/product_image_big_340dp"
        android:layout_height="@dimen/product_image_big_386dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/favorite"
        android:layout_width="@dimen/size_icon"
        android:layout_height="@dimen/size_icon"
        style="@style/FavoriteButton"
        android:checkable="true"
        app:icon="@drawable/button_favorite"
        app:layout_constraintTop_toTopOf="@id/product_image"
        app:layout_constraintEnd_toEndOf="@id/product_image"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin_16dp"
        app:layout_constraintBottom_toBottomOf="@id/product_image"
        app:layout_constraintStart_toStartOf="@id/product_image"
        />

    <com.zhpan.indicator.IndicatorView
        android:id="@+id/indicator_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/default_margin_16dp"
        app:vpi_slider_radius="@dimen/big_indicator_radius_3dp"
        app:vpi_slider_normal_color="@color/light_grey_bg"
        app:vpi_slider_checked_color="@color/pink"
        app:layout_constraintTop_toBottomOf="@id/product_image"
        app:layout_constraintStart_toStartOf="@id/product_image"
        app:layout_constraintEnd_toEndOf="@id/product_image"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_16dp"
        android:textColor="@color/grey"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textSize="@dimen/size_text_title1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/indicator_view"
        tools:text="A PIEU"
        />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin_16dp"
        android:layout_marginTop="@dimen/small_margin_8dp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textSize="@dimen/size_text_large_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="Пенка для умывания `A `PIEU` `DEEP CLEAN` 200 мл"
        />

    <TextView
        android:id="@+id/available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin_16dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/grey"
        android:textSize="@dimen/size_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        tools:text="Доступно для заказа 30 штук"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey_bg"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="@dimen/default_margin_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/available"
        app:layout_constraintBottom_toTopOf="@id/feedback_picture"
        />

    <ImageView
        android:id="@+id/feedback_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="@dimen/default_margin_16dp"
        android:src="@drawable/icon_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        />
    <TextView
        android:id="@+id/feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/text_margin_6dp"
        android:textColor="@color/grey"
        android:textSize="@dimen/size_text"
        app:layout_constraintStart_toEndOf="@id/feedback_picture"
        app:layout_constraintTop_toTopOf="@id/feedback_picture"
        app:layout_constraintBottom_toBottomOf="@id/feedback_picture"
        tools:text="4.3 . 4 отзыва"
        />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/feedback_picture"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_margin_16dp"
        android:layout_marginStart="@dimen/default_margin_16dp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textSize="@dimen/size_text_price"
        tools:text="549 Р"
        />
    <TextView
        android:id="@+id/old_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="11dp"
        android:textColor="@color/grey"
        android:textSize="@dimen/size_text"
        app:layout_constraintStart_toEndOf="@id/price"
        app:layout_constraintTop_toTopOf="@id/price"
        app:layout_constraintBottom_toBottomOf="@id/price"
        app:layout_constraintEnd_toStartOf="@id/discount_amount"
        tools:text="899 Р"
        />

    <TextView
        android:id="@+id/discount_amount"
        android:layout_width="@dimen/discount_width"
        android:layout_height="@dimen/discount_height"
        android:layout_marginHorizontal="@dimen/small_margin_8dp"
        android:gravity="center"
        android:background="@drawable/bg_discount"
        android:textSize="@dimen/size_text_element"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/old_price"
        app:layout_constraintTop_toTopOf="@id/price"
        app:layout_constraintBottom_toBottomOf="@id/price"
        tools:text="-39%"/>
</androidx.constraintlayout.widget.ConstraintLayout>