<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ProductFragment">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin_16dp">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/product_image"
            android:layout_width="@dimen/product_image_big_340dp"
            android:layout_height="@dimen/product_image_big_386dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/favorite"
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"
            style="@style/SmallButton"
            android:checkable="true"
            app:icon="@drawable/button_favorite"
            app:layout_constraintTop_toTopOf="@id/product_image"
            app:layout_constraintEnd_toEndOf="@id/product_image"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_icon"
            android:layout_marginBottom="@dimen/default_margin_16dp"
            style="@style/SmallButton"
            app:icon="@drawable/icon_help"
            app:iconTint="@null"
            app:layout_constraintBottom_toBottomOf="@id/product_image"
            app:layout_constraintStart_toStartOf="@id/product_image"
            />

        <com.zhpan.indicator.IndicatorView
            android:id="@+id/indicator_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/default_margin_16dp"
            app:vpi_slider_radius="@dimen/big_indicator_radius_3dp"
            app:vpi_slider_normal_color="@color/light_grey_bg"
            app:vpi_slider_checked_color="@color/pink"
            app:layout_constraintTop_toBottomOf="@id/product_image"
            app:layout_constraintStart_toStartOf="@id/product_image"
            app:layout_constraintEnd_toEndOf="@id/product_image"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textSize="@dimen/size_text_title1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/indicator_view"
            tools:text="A PIEU"
            />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin_8dp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textSize="@dimen/size_text_large_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            tools:text="Пенка для умывания `A `PIEU` `DEEP CLEAN` 200 мл"
            />

        <TextView
            android:id="@+id/available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/grey"
            android:textSize="@dimen/size_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitle"
            tools:text="Доступно для заказа 30 штук"
            />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            app:dividerColor="@color/light_grey_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/available"
            app:layout_constraintBottom_toTopOf="@id/feedback_rating"/>


        <RatingBar
            android:id="@+id/feedback_rating"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:isIndicator="true"
            android:stepSize="0.1"
            android:rating="1"
            style="@style/CustomRatingBarStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            />
        <TextView
            android:id="@+id/feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:textSize="@dimen/size_text"
            app:layout_constraintStart_toEndOf="@id/feedback_rating"
            app:layout_constraintTop_toTopOf="@id/feedback_rating"
            app:layout_constraintBottom_toBottomOf="@id/feedback_rating"
            tools:text="4.3 . 4 отзыва"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/feedback_rating"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/default_margin_16dp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textSize="@dimen/size_text_price"
            tools:text="549 Р"
            />
        <TextView
            android:id="@+id/old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="11dp"
            android:textColor="@color/grey"
            android:textSize="@dimen/size_text"
            app:layout_constraintStart_toEndOf="@id/price"
            app:layout_constraintTop_toTopOf="@id/price"
            app:layout_constraintBottom_toBottomOf="@id/price"
            app:layout_constraintEnd_toStartOf="@id/discount_amount"
            tools:text="899 Р"
            />

        <TextView
            android:id="@+id/discount_amount"
            android:layout_width="@dimen/discount_width"
            android:layout_height="@dimen/discount_height"
            android:layout_marginHorizontal="@dimen/small_margin_8dp"
            android:gravity="center"
            android:background="@drawable/bg_discount"
            android:textSize="@dimen/size_text_element"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/old_price"
            app:layout_constraintTop_toTopOf="@id/price"
            app:layout_constraintBottom_toBottomOf="@id/price"
            tools:text="-39%"/>

        <TextView
            android:id="@+id/label_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24dp"
            android:text="@string/label_description"
            android:textSize="@dimen/size_text_title1"
            android:fontFamily="@font/sf_pro_display_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/price"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_button_brand"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_profile_button_49dp"
            android:layout_marginTop="@dimen/default_margin_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_description"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/ProfileButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />


            <TextView
                android:id="@+id/brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:background="@android:color/transparent"
                android:textSize="@dimen/size_text_title2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_right"
                android:layout_margin="@dimen/small_margin_8dp"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin_8dp"
            android:textSize="@dimen/size_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/container_button_brand"
            app:layout_constraintBottom_toTopOf="@id/button_hide_description"
            tools:text="Пенка для лица Глубокое очищение содержит минеральную воду и соду, способствует глубокому очищению пор от различных загрязнений, контролирует работу сальных желез, сужает поры. Обладает мягким антисептическим действием, не пересушивая кожу. Минеральная вода тонизирует и смягчает кожу."
            />

        <Button
            android:id="@+id/button_hide_description"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="10dp"
            style="@style/SmallButton"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textSize="@dimen/size_text"
            android:textColor="@color/grey"
            android:text="@string/button_hide"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_description"
            app:layout_constraintBottom_toTopOf="@id/label_characteristics"
            />

        <TextView
            android:id="@+id/label_characteristics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24dp"
            android:text="@string/label_characteristics"
            android:textSize="@dimen/size_text_title1"
            android:fontFamily="@font/sf_pro_display_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_hide_description"
            app:layout_constraintBottom_toTopOf="@id/info_panel"
            />

        <LinearLayout
            android:id="@+id/info_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_16dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_characteristics"
            app:layout_constraintBottom_toTopOf="@id/label_contents"
            />

        <TextView
            android:id="@+id/label_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:text="@string/label_contents"
            android:textSize="@dimen/size_text_title1"
            android:fontFamily="@font/sf_pro_display_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info_panel"
            app:layout_constraintBottom_toTopOf="@id/text_contents"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_icon"
            style="@style/SmallButton"
            app:iconTint="@color/grey"
            app:icon ="@drawable/icon_copy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/label_contents"
            app:layout_constraintBottom_toBottomOf="@id/label_contents"
            />

        <TextView
            android:id="@+id/text_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_16dp"
            android:textSize="@dimen/size_text"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_contents"
            app:layout_constraintBottom_toTopOf="@id/button_hide_contents"
            tools:text="Water, Propylene Glycol, Dipropylene Glycol, Lauric acid, Myristic Acid, Potassium Hydroxide, Lauryl Hydroxysultaine, Potassium Cocdada и другие замечательный химикалии"
            />

        <Button
            android:id="@+id/button_hide_contents"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="10dp"
            style="@style/SmallButton"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textSize="@dimen/size_text"
            android:textColor="@color/grey"
            android:text="@string/button_more"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_contents"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>