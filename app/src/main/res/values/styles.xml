<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputShop" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_marginHorizontal">@dimen/default_margin_16dp</item>
        <item name="android:paddingHorizontal">@dimen/default_margin_16dp</item>
        <item name="android:background">@drawable/text_input_bg</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textSize">@dimen/size_text_title1</item>
    </style>
    <style name="AppButton" parent="@style/Widget.Material3.Button">
        <item name="android:layout_marginHorizontal">@dimen/default_margin_16dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="backgroundTint">@color/button_state_colors</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">@dimen/size_text_title2</item>
    </style>
    <style name="ChipFilter" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:textSize">@dimen/size_text_title2</item>
        <item name="textStartPadding">@dimen/text_padding</item>
        <item name="textEndPadding">@dimen/text_padding</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="chipBackgroundColor">@color/chip_select_color</item>
        <item name="android:textColor">@color/chip_text_select_color</item>
        <item name="closeIconTint">@color/white</item>
        <item name="closeIcon">@drawable/icon_delete_filter</item>
        <item name="closeIconEnabled">true</item>
    </style>
    <style name="FavoriteButton" parent="@style/Widget.Material3.Button.IconButton">
        <item name="android:padding">0dp</item>
        <item name="background">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="iconSize">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>
    <style name="MenuButton" parent="@style/Widget.Material3.Button.TextButton.Icon">
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/size_text_caption</item>
        <item name="iconGravity">top</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/dark_grey</item>
        <item name="android:layout_marginEnd">@dimen/menu_margin_43dp</item>
    </style>
    <style name="ProfileButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/light_grey_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="rippleColor">@color/grey</item>
    </style>
    <style name="MenuText" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">@dimen/size_text_caption</item>
    </style>
    <style name="TabText" parent="@style/TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TabTextSelected" parent="@style/TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>