<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/registrationFragment">

    <fragment
        android:id="@+id/registrationFragment"
        android:name="ru.garshishka.testonlineshop.ui.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registrationFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/registrationFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/catalogueFragment"
        android:name="ru.garshishka.testonlineshop.ui.CatalogueFragment"
        android:label="fragment_catalogue"
        tools:layout="@layout/fragment_catalogue" >
        <action
            android:id="@+id/action_catalogueFragment_to_productFragment"
            app:destination="@id/productFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="ru.garshishka.testonlineshop.ui.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />
    <fragment
        android:id="@+id/productFragment"
        android:name="ru.garshishka.testonlineshop.ui.ProductFragment"
        android:label="fragment_product"
        tools:layout="@layout/fragment_product" /><action android:id="@+id/action_global_catalogueFragment" app:destination="@id/catalogueFragment"/><action android:id="@+id/action_global_mainFragment" app:destination="@id/mainFragment"/>
    <fragment
        android:id="@+id/cartFragment"
        android:name="ru.garshishka.testonlineshop.ui.CartFragment"
        android:label="CartFragment" />
    <fragment
        android:id="@+id/discountsFragment"
        android:name="ru.garshishka.testonlineshop.ui.DiscountsFragment"
        android:label="DiscountsFragment" /><action android:id="@+id/action_global_cartFragment" app:destination="@id/cartFragment"/><action android:id="@+id/action_global_discountsFragment" app:destination="@id/discountsFragment"/>
    <fragment
        android:id="@+id/profileFragment"
        android:name="ru.garshishka.testonlineshop.ui.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_registrationFragment"
            app:destination="@id/registrationFragment"
            />
        <action
            android:id="@+id/action_profileFragment_to_favoritesCatalogue"
            app:destination="@id/favoritesCatalogue" />
    </fragment><action android:id="@+id/action_global_profileFragment" app:destination="@id/profileFragment"/>
    <fragment
        android:id="@+id/favoritesCatalogue"
        android:name="ru.garshishka.testonlineshop.ui.FavoritesCatalogue"
        android:label="FavoritesCatalogue" />
</navigation>